<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | CF Analyser </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="shim">
      <%= render 'layouts/shim' %>
    </div>
    <div class="header">
      <%= render 'layouts/header' %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
    <div class="footer">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
