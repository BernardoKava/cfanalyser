<% provide(:title, "CF") %>

<div>
  <p id="notice"><%= notice %></p>
</div>

<div class="breadcrumb" style="background-color: #2a4b51;color: white">
  <h2>Cash-Flows</h2>
</div>

<div class="jumbotron" style="background-color: lightgoldenrodyellow;color: navy">
  <table class=" table table-hover" >
    <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Accounting date</th>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cashflows.each do |cashflow| %>
      <tr>
        <td><%= cashflow.month %></td>
        <td><%= cashflow.year %></td>
        <td><%= cashflow.accounting_date.strftime("%d %b. %Y") %></td>
        <td><%= cashflow.name %></td>
        <td><%= cashflow.balance %></td>
        <td class="alert-warning"><%= link_to '', cashflow, class:'fa fa-eye' %></td>
        <td class="alert-danger"><%= link_to '', edit_cashflow_path(cashflow), class:'fa fa-edit'  %></td>

      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @cashflows %>
  <br>

</div>


























